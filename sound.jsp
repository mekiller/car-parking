<%@ page import="javax.sound.sampled.*" %>
<body>
<%

int hz=100; 
      int msecs=1000;
      double vol=111112;
              
    byte[] buf = new byte[1];
    AudioFormat af = 
        new AudioFormat(
            8000f, // sampleRate
            8,           // sampleSizeInBits
            1,           // channels
            true,        // signed
            false);      // bigEndian
    SourceDataLine sdl = AudioSystem.getSourceDataLine(af);
    sdl.open(af);
    sdl.start();
    for (int i=0; i < msecs*8; i++) {
      double angle = i / (8000f / hz) * 2.0 * Math.PI;
      buf[0] = (byte)(Math.sin(angle) * 127.0 * vol);
      sdl.write(buf,0,1);
    }
    sdl.drain();
    sdl.stop();
    sdl.close();
%>
</body>
